{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src/**/*", "tests/**/*"],  
  "exclude": ["node_modules", "dist","tests","jest.config.ts","build"]
}
